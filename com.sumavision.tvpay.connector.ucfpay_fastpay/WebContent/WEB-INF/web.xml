<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>com.sumavision.tvpay.connector.ucfpayfastpay</display-name>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>ucfpayfastpay.root</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/log4j.properties</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/spring/**/*Spring.xml
		</param-value>
	</context-param>
	<servlet>
		<servlet-name>remote-control-servlet</servlet-name>
		<servlet-class>
			com.sumavision.tvpay.commons.config.http.support.servlet.DispatcherServletProxy</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				/WEB-INF/spring/remote-control-servlet.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
		<!-- manual select servlet -->
       <servlet>
              <servlet-name>manual-select-servlet</servlet-name>
              <servlet-class>com.proemion.spring.clustering.algo.manual.servlet.ManualSelectModeServlet</servlet-class>
       </servlet>
       <servlet-mapping>
              <servlet-name>manual-select-servlet</servlet-name>
              <url-pattern>/serviceSelect</url-pattern>
       </servlet-mapping>
	
	
	<servlet-mapping>
		<servlet-name>remote-control-servlet</servlet-name>
		<url-pattern>/remote/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>config</servlet-name>
		<servlet-class>com.sumavision.tvpay.commons.config.http.support.servlet.ConfigManageServlet</servlet-class>
		<init-param>
			<param-name>autoStartup</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>afterInit</param-name>
			<param-value>bankConnector:init,bankConnector:regist,connectorListener:start</param-value>
		</init-param>
	<!-- 版本号信息，每次提交新版本该参数需要更新 -->
		<init-param>
			<param-name>product-version</param-name>
			<param-value>SP_C_20160010</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>config</servlet-name>
		<url-pattern>/config</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>webBankNotice</servlet-name>
		<servlet-class>com.sumavision.tvpay.connector.servlet.BankNoticeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>webBankNotice</servlet-name>
		<url-pattern>/webBankNotice</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>webBankNoticeOfFastPay</servlet-name>
		<servlet-class>com.sumavision.tvpay.connector.servlet.FastPayNoticeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>webBankNoticeOfFastPay</servlet-name>
		<url-pattern>/webBankNotice4FastPay</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>queryTradeServlet</servlet-name>
		<servlet-class>com.sumavision.tvpay.connector.servlet.QueryTradeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>queryTradeServlet</servlet-name>
		<url-pattern>/queryTradeServlet</url-pattern>
	</servlet-mapping>
	
	


	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>