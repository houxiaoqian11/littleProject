<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="propertyConfigurer"
		class="com.sumavision.tvpay.spring.resources.ReloadablePlaceHolderResourceBundleMessageSource">
		<property name="locations">
			<list>
				<value>ebankfastpay.properties</value>
				<value>sumapay-config.properties</value>
			</list>
		</property>
	</bean>
	
    <bean id="transferMessageRecorder"
		class="com.sumavision.tvpay.connector.message.TransferMessageRecorder">
		<property name="recordSavePath"
			value="/sumapay/log/connector/${connector.ebankfastpay.name}"></property>
		<property name="connectorName" value="${connector.ebankfastpay.name}"></property>
		<property name="currentRecordFile" value="bankTransferMessage.log"></property>
	</bean>
</beans>
